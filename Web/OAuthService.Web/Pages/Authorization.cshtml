@page
@model OAuthService.Web.Pages.AuthorizationModel
@{
}
<h1>Authorization page</h1>
<form method="post">
    <div hidden>
        <input asp-for="Input.ResponseType"/>
        <input asp-for="Input.ClientId"/>
        <input asp-for="Input.RedirectUri"/>
        <input asp-for="Input.Scope"/>
        <input asp-for="Input.State"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.Username"></label>
        <input class="form-control" asp-for="Input.Username"/>
        <span asp-validation-for="Input.Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input class="form-control" asp-for="Input.Password"/>
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div class="form-group">
        <span asp-validation-for="Input.ResponseType"></span>
    </div>
    <div class="form-group">
        <span asp-validation-for="Input.ClientId"></span>
    </div>
    <div asp-validation-summary="ModelOnly">
    </div>
    <button type="submit" class="btn btn-primary">Authorize</button>
</form>
